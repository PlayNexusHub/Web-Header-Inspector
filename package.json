{
  "name": "@playnexus/web-header-inspector",
  "productName": "PlayNexus Web Header Inspector",
  "version": "1.0.0",
  "description": "Professional web security header analysis tool by PlayNexus",
  "main": "src/main.js",
  "homepage": "https://playnexus.com",
  "author": {
    "name": "Nortaq",
    "email": "playnexushq@gmail.com"
  },
  "license": "Proprietary",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix"
  },
  "build": {
    "appId": "com.playnexus.webheaderinspector",
    "productName": "PlayNexus Web Header Inspector",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.4",
    "electron-store": "^8.1.0",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.52.0",
    "@types/node": "^20.8.0"
  }
}